# CASTOR ELECCIONES - Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# Twitter API (Required)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# OpenAI API (Required for some features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# Anthropic Claude API (Required for E-14 OCR)
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_VISION_MODEL=claude-sonnet-4-20250514

# E-14 OCR Configuration
E14_OCR_MAX_PAGES=20
E14_OCR_TIMEOUT=120
E14_OCR_DPI=150

# Electoral API Security Limits
E14_COST_PER_PROCESS=0.10  # USD per E-14 processed
E14_HOURLY_COST_LIMIT=2.00  # Max USD per user per hour
E14_DAILY_COST_LIMIT=5.00   # Max USD per user per day
E14_MAX_FILE_SIZE_MB=10     # Max PDF file size
E14_MAX_PAGES=20            # Max pages per PDF

# Twitter Rate Limits
TWITTER_DAILY_TWEET_LIMIT=500
TWITTER_MONTHLY_LIMIT=15000

# Database (Optional - defaults to SQLite)
DATABASE_URL=sqlite:///data/castor.db

# Server Configuration
HOST=0.0.0.0
PORT=5001
DEBUG=false
