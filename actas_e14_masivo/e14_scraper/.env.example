# ==============================================
# E-14 Scraper - Configuración
# ==============================================
# Copia este archivo a .env y ajusta los valores

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=e14_scraper
DB_USER=postgres
DB_PASSWORD=tu_password_seguro

# Workers y rendimiento
NUM_WORKERS=20
REQUESTS_PER_MINUTE=30

# CAPTCHA (2Captcha) - Opcional pero recomendado
# Obtén tu API key en https://2captcha.com
CAPTCHA_API_KEY=tu_api_key_de_2captcha
CAPTCHA_ENABLED=true

# Proxies - Opcional pero recomendado para scraping masivo
USE_PROXIES=false
PROXY_LIST_FILE=proxies.txt

# Timeouts y reintentos
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Almacenamiento
OUTPUT_DIR=./output
SAVE_IMAGES=true

# Logging
LOG_LEVEL=INFO
PROGRESS_INTERVAL=10
